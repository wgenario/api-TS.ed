{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@now/node",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "public/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "TEST_VARIABLE": "test"
  }
}
